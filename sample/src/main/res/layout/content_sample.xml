<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SampleActivity"
    tools:showIn="@layout/activity_sample">

  <Button
      android:id="@+id/delegate_dialog"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/delegate_dialog" />

  <Button
      android:id="@+id/delegate_dialog_with_parameter"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/delegate_dialog_with_parameter" />

  <Button
      android:id="@+id/material_dialog"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/material_dialog" />

</LinearLayout>
